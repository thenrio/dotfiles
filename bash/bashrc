# see /etc/paths
# append a self bin path
export PATH=$PATH:$HOME/bin

# exit hook for non interractive session (git clone)
if [ -z "$PS1" ]; then
  # this is added by /etc/paths ... did not grep when it is read :)
  export PATH="$PATH:/usr/local/bin"
  return
fi

set -o vi
# FIXME __dirname__=`dirname $(readlink "$0")`
__dirname__=~/src/dotfiles/me/bash
# aliases
. ${__dirname__}/aliases
# sources
for f in ${__dirname__}/sources.d/* ; do . $f; done

# editor
export EDITOR='vim'

# prevent tar from creating ._ files
export COPYFILE_DISABLE=true

# sugar git prompt
. ~/.gitprompt.bash

# java
export JAVA_HOME=`/usr/libexec/java_home`
# android
export ANDROID_HOME=~/bin/android-sdk-r15

# rbenv
export PATH="$PATH:$HOME/.rbenv/bin"
eval "$(rbenv init -)"

# python
export PYTHONSTARTUP=~/.python/pythonrc

# bash completion is broken!
if [ -x `which brew` ]  && [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

# octave
OCTAVE_HOME=~/craft/ml

# vagrant
# export VAGRANT_LOG=INFO

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
